                        <input type="password" name="newPassword" class="form-control" placeholder="新密码" required>
                    </div>
                    <div class="form-group">
                        <label for="confirmPassword" class="sr-only">重复密码</label>
                        <input type="password" name="confirmPassword" class="form-control" placeholder="重复密码" required>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
                        <button type="submit" class="btn btn-primary">修改</button>
                    </div>
                </form>
            </div>
